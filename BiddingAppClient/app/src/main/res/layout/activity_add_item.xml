<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bidappclient.biddingappclient.AddItemActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the following details about your item:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name:"
        android:id="@+id/textView3"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemNameAddId"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView3"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initial Price:"
        android:id="@+id/textView4"
        android:layout_below="@+id/itemNameAddId"
        android:layout_toLeftOf="@+id/itemNameAddId"
        android:layout_toStartOf="@+id/itemNameAddId"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/initialPriceAddId"
        android:layout_below="@+id/itemNameAddId"
        android:layout_alignLeft="@+id/itemNameAddId"
        android:layout_alignStart="@+id/itemNameAddId"
        android:layout_alignRight="@+id/itemNameAddId"
        android:layout_alignEnd="@+id/itemNameAddId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bid Lasting Time (in days):"
        android:id="@+id/textView5"
        android:layout_below="@+id/initialPriceAddId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/bidLastingAddId"
        android:layout_below="@+id/initialPriceAddId"
        android:layout_toRightOf="@+id/textView5"
        android:layout_alignRight="@+id/initialPriceAddId"
        android:layout_alignEnd="@+id/initialPriceAddId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:id="@+id/textView6"
        android:layout_below="@+id/bidLastingAddId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/descriptionAddId"
        android:layout_below="@+id/bidLastingAddId"
        android:layout_toRightOf="@+id/textView6"
        android:layout_alignRight="@+id/bidLastingAddId"
        android:layout_alignEnd="@+id/bidLastingAddId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Picture (optional):"
        android:id="@+id/textView7"
        android:layout_below="@+id/descriptionAddId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:id="@+id/pictureButtonAddId"
        android:layout_below="@+id/descriptionAddId"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Item"
        android:id="@+id/submitAddId"
        android:layout_below="@+id/pictureButtonAddId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:onClick="onClickSubmitItem"/>

</RelativeLayout>
