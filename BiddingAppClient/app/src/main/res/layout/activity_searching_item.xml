<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bidappclient.biddingappclient.SearchingItemActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type in the item you would like to seach for:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchedItemTextId"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/searchItemButtonId"
        android:layout_alignEnd="@+id/searchItemButtonId"
        android:layout_alignLeft="@+id/searchItemButtonId"
        android:layout_alignStart="@+id/searchItemButtonId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Item"
        android:id="@+id/searchItemButtonId"
        android:layout_below="@+id/searchedItemTextId"
        android:layout_centerHorizontal="true"
        android:onClick="onClickSearchingItem"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchingItemTextId"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
