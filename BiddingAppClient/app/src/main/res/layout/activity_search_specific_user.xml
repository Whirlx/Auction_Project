<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bidappclient.biddingappclient.SearchSpecificUserActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type which user profile would you like to view:"
        android:id="@+id/textView24"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/specificUsernameToSearchId"
        android:layout_below="@+id/textView24"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Profile"
        android:id="@+id/searchProfileSpecificUserButtonId"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/specificUsernameToSearchId"
        android:layout_centerHorizontal="true"
        android:onClick="onClickSearchSpecificProfile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/fillUserInfoSpecificUserId"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/searchProfileSpecificUserButtonId"
        android:layout_alignRight="@+id/specificUsernameToSearchId"
        android:layout_alignEnd="@+id/specificUsernameToSearchId" />

</RelativeLayout>
