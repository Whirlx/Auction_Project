<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bidappclient.biddingappclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainUserScreenActivity" />
        <activity android:name=".AddItemActivity" />
        <activity android:name=".CurrentBidsActivity" />
        <activity android:name=".ViewCurrentAuctionsActivity" />
        <activity android:name=".ViewAllUsersActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".PlaceNewBidActivity" />
        <activity android:name=".AdminCommandsActivity" />
        <activity android:name=".DeleteUserActivity" />
        <activity android:name=".SearchSpecificUserActivity" />
        <activity android:name=".ViewAllItemsActivity" />
        <activity android:name=".ViewItemActivity" />
        <activity android:name=".AddItemChooseCategoryActivity" />
        <activity android:name=".AddItemCategoryActivity" />
        <activity android:name=".ViewItemsByCategoryActivity" />
        <activity android:name=".ChangeIPActivity"></activity>
    </application>

</manifest>