<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bidappclient.biddingappclient">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainUserScreenActivity" />
        <activity android:name=".SearchingItemActivity" />
        <activity android:name=".ListOfSearchActivity" />
        <activity android:name=".AddItemActivity" />
        <activity android:name=".CurrentBidsActivity" />
        <activity android:name=".ViewProfileActivity" />
        <activity android:name=".ViewCurrentAuctionsActivity" />
        <activity android:name=".ViewAllUsersActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".PlaceNewBidActivity"></activity>
    </application>

</manifest>